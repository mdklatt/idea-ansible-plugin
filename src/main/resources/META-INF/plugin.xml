<idea-plugin>
    <id>idea-ansible</id>
    <name>Ansible</name>
    <vendor email="mdklatt@alumni.ou.edu" url="https://github.com/mdklatt/idea-ansible-plugin">Michael Klatt</vendor>

    <description><![CDATA[
    IDEA plugin for running <a href="https://docs.ansible.com/ansible/latest/index.html">Ansible</a> commands.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="software.mdklatt.idea.ansible.run.AnsibleConfigurationType"/>
        <programRunner implementation="software.mdklatt.idea.ansible.run.PlaybookRunner"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>